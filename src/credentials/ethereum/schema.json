{
  "$id": "https://sparks.foundation/credentials/ethereum/schema",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Ethereum Account",
  "description": "Ethereum Account",
  "type": "object",
  "properties": {
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^.{145}$"
        },
        "address": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "balance": {
          "type": "number"
        },
        "holdings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ticker": {
                "type": "string"
              },
              "address": {
                "type": "string",
                "pattern": "^0x[a-fA-F0-9]{40}$"
              },
              "balance": {
                "type": "number"
              }
            },
            "required": [
              "address"
            ]
          }
        }
      },
      "required": [
        "id",
        "address"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}