{
  "$id": "https://example.com/schemas/twitter-account.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "TwitterAccount",
  "description": "Twitter Account Credential",
  "type": "object",
  "properties": {
    "credentialSubject": {
      "type": "object",
      "properties": {
        "handle": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_]{1,15}$"
        }
      },
      "required": ["handle"]
    },
    "issued": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["handle", "issued"]
}
